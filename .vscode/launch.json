{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Show MDP: Generator",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tcdmarl/tools/show.py",
            "console": "integratedTerminal",
            "args": [
                "--environment",
                "generator"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Show MDP: Laboratory",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tcdmarl/tools/show.py",
            "console": "integratedTerminal",
            "args": [
                "--environment",
                "generator"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Play: Generator",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tcdmarl/Environments/generator/multi_agent_generator_env.py",
            "console": "integratedTerminal",
            "args": [],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Play: Laboratory",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tcdmarl/Environments/laboratory/multi_agent_laboratory_env.py",
            "console": "integratedTerminal",
            "args": [],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Plot results",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tcdmarl/main.py",
            "console": "integratedTerminal",
            "args": [
                "--plot-results",
                "${input:filePath}"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Train: debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tcdmarl/tools/train.py",
            "console": "integratedTerminal",
            "args": [
                "--config",
                "configs/debug.json",
                "--collection",
                "debug",
                "--all-experiments",
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Train: paper (generator only)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tcdmarl/tools/train.py",
            "console": "integratedTerminal",
            "args": [
                "--config",
                "configs/paper.json",
                "--collection",
                "${input:collection}",
                "--environment-name",
                "generator",
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
    ],
    "inputs": [
        {
            "id": "filePath",
            "type": "promptString",
            "description": "Please enter the file path"
        },
        {
            "id": "collection",
            "type": "promptString",
            "description": "Please enter the experiment collection name"
        }
    ]
}