{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Show MDP: routing",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tcdmarl/main.py",
            "console": "integratedTerminal",
            "args": [
                "--experiment",
                "routing",
                "--show"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Plot results",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tcdmarl/main.py",
            "console": "integratedTerminal",
            "args": [
                "--plot-results",
                "${input:filePath}"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Run all experiments",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tcdmarl/main.py",
            "console": "integratedTerminal",
            "args": [
                "--collection",
                "${input:collection}",
                "--all-experiments",
                "--num-trials",
                "10",
                "--step-unit-factor",
                "500",
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Routing (decentralized, TL-CD)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tcdmarl/main.py",
            "console": "integratedTerminal",
            "args": [
                "--collection",
                "${input:collection}",
                "--tlcd",
                "--experiment",
                "routing",
                "--num-trials",
                "10",
                "--plot-results-after-experiment",
                "--step-unit-factor",
                "100",
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Routing (decentralized, no TL-CD)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tcdmarl/main.py",
            "console": "integratedTerminal",
            "args": [
                "--collection",
                "${input:collection}",
                "--experiment",
                "routing",
                "--num-trials",
                "10",
                "--plot-results-after-experiment",
                "--step-unit-factor",
                "100",
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Routing (centralized, TL-CD)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tcdmarl/main.py",
            "console": "integratedTerminal",
            "args": [
                "--collection",
                "${input:collection}",
                "--tlcd",
                "--experiment",
                "centralized_routing",
                "--num-trials",
                "10",
                "--plot-results-after-experiment",
                "--step-unit-factor",
                "500",
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Routing (centralized, no TL-CD)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tcdmarl/main.py",
            "console": "integratedTerminal",
            "args": [
                "--collection",
                "${input:collection}",
                "--experiment",
                "centralized_routing",
                "--num-trials",
                "10",
                "--plot-results-after-experiment",
                "--step-unit-factor",
                "500",
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
    ],
    "inputs": [
        {
            "id": "filePath",
            "type": "promptString",
            "description": "Please enter the file path"
        },
        {
            "id": "collection",
            "type": "promptString",
            "description": "Please enter the experiment collection name"
        }
    ]
}